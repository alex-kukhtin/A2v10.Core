{
	"$schema": "http://json-schema.org/draft-04/schema",
	"$version": "10.0.7789",
	"title": "JSON Schema for app.json",
	"type": "object",

	"properties": {
		"$schema": { "type": "string" },
		"title": { "type": "string" },
		"version": { "type": "string" },
		"copyright": { "type": "string" },
		"appLogo": { "type": "string" },
		"links": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"title": { "type": "string" },
					"url": {
						"type": "string",
						"pattern": "^[\/|http|https].+"
					}
				},
				"additionalProperties": false
			}
		},
		"profileMenu": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"title": { "type": "string" },
					"icon": { "type": "string" },
					"type": { "type": "string", "enum": ["dialog", "page", "external", "separator"]},
					"url": {
						"type": "string",
						"pattern": "^[\/|http|https].+"
					}
				},
				"additionalProperties": false
			}
		}

	},
	"additionalProperties": false
}
