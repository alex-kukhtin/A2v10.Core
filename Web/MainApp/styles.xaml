<!-- Common styles -->
<Styles xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataGrid">
        <Setter Property="Style" Value="Light"/>
        <Setter Property="Striped" Value="False"/>
        <Setter Property="Hover" Value="True"/>
        <Setter Property="GridLines" Value="Horizontal" />
        <Setter Property="UserSelect" Value="True"/>
        <Setter Property="Border" Value="True"/>
    </Style>
    <Style x:Key="Taskpad">
        <Setter Property="Width" Value="22rem"/>
        <Setter Property="Collapsible" Value="False"/>
        <Setter Property="Overflow" Value="True"/>
        <Setter Property="Padding" Value=".5rem,1rem"/>
    </Style>
</Styles>
